 @model List<TechNeuronstask.Models.Employee>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Employee Details</title>
    <style>
        body {
            background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0, 0, 0, 0.4)), url('https://toplinemanagement.com/wp-content/uploads/2017/01/top-line-management-login-background-1.jpg');
            background-size: cover;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            min-height: 100vh; 
            margin: 0; 
            padding: 0; 
        }

        .container-fluid {
            padding: 20px; 
        }
        .table-container {
            max-width: 100%; 
            overflow-x: auto; 
        }
    </style>
</head>
<body>
    <h1>Total Employees</h1>
    <div class="login">
        <table class="table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
            <tbody>
                @if(Model!=null)
                {
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id</td>
                        <td>@item.Name </td>
                        <td> @item.Description </td>
                        <td>  <a href="/Employee/Edit/@item.Id" class="btn btn-secondary">Edit</a> </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
